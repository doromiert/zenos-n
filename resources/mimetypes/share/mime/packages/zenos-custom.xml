<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">

  <!-- Microsoft -->
  <mime-type type="application/x-xbox-rom">
    <comment>Xbox ROM</comment>
    <icon name="xbox"/>
    <glob pattern="*.XB.iso"/>
    <glob pattern="*.XB.xbe"/>
    <glob pattern="*.XB.cci"/>
